{
  "compilerOptions": {
    "module": "esNext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "alwaysStrict": true,
    "paths": {
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["src/**/*", ".eslintrc.js", "App.tsx"],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
